<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/assets/css/Site.css" rel="stylesheet" />
    <link href="~/assets/css/all.min.css" rel="stylesheet" />
    @*<link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />*@
    <link href="~/assets/css/bootstrap.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Cairo';
        }
    </style>
</head>

<body>

    <div class="navbar navbar-dark navbar-expand-lg bg-dark fixed-top">
        <div class="container">
            @Html.ActionLink("التوظيف", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            @*<a class="navbar-brand" href="#">التوظيف</a>*@
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-home fa-fw"></i>
                            الرئيسية
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-folders fa-fw"></i>
                            أصناف العروص
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-info-circle fa-fw"></i>
                            حول الموقع
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-envelope fa-fw"></i>
                            اتصل بنا
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-sign-in-alt fa-fw"></i>
                            تسجيل الدخول
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-address-card fa-fw"></i>
                            اشتراك
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - جميع الحقوق محفوظة</p>
        </footer>
    </div>
    <script src="~/assets/js/popper.js"></script>
    <script src="~/assets/js/jquery-3.5.1.slim.min.js"></script>
    @*<script src="~/assets/js/bootstrap.min.js"></script>*@
    <script src="~/assets/js/bootstrap.js"></script>
    <script src="~/assets/js/all.min.js"></script>
</body>
</html>
